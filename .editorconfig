[*]

# configuration with no corresponding prettier support

charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# configuration with corresponding prettier support

end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 80

# overrides

[{*.yml,*.yaml}]
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[LICENSE]
insert_final_newline = false
